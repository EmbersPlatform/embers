<%= EmbersWeb.LayoutView.sidebar(assigns) do %>
  <h1><%= gettext("Conversations") %></h1>
  <div view="chat">
    <chat-list></chat-list>
  </div>
<% end %>
<div id="view" view="chat" subview="chat-view" class="has-sidebar">
  <main>
    <chat-conversation
      data-user-id="<%= @user.id %>"
      data-username="<%= @user.canonical %>"
      data-avatar="<%= @user.meta.avatar.small %>"
    ></chat-conversation>
  </main>
</div>
