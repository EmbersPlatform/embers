{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~*": ["./assets/*"]
    },
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "assets",
    "assets/js/types/svg.d.ts",
    "assets/js/components/hook.d.ts"
  ],
  "exclude": [
    "priv/static",
    "./node_modules"
  ]
}
